@model Application
@{
    ViewData["Title"] = "Add Movie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 border rounded p-4 shadow-sm bg-light">

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.SuccessMessage
                </div>
            }

            <h2 class="text-center mb-4">Add a New Movie</h2>

            <form method="post">
                @* Changed to ModelOnly to stop the list of errors at the top *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="category" class="form-label">Category</label>
                    <input asp-for="category" class="form-control" />
                    <span asp-validation-for="category" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="title" class="form-label">Movie Title</label>
                    <input asp-for="title" class="form-control" />
                    @* Added validation span for Title *@
                    <span asp-validation-for="title" class="text-danger"></span> 
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col">
                            <label asp-for="year" class="form-label">Year</label>
                            <input asp-for="year" class="form-control" />
                            <span asp-validation-for="year" class="text-danger"></span> 
                        </div>
                        <div class="col">
                            <label asp-for="rating" class="form-label">Rating</label>
                            <select asp-for="rating" class="form-control">
                                <option value="">Select...</option>
                                <option value="G">G</option>
                                <option value="PG">PG</option>
                                <option value="PG-13">PG-13</option>
                                <option value="R">R</option>
                            </select>
                            @* Added validation span for Rating *@
                            <span asp-validation-for="rating" class="text-danger"></span> 
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="director" class="form-label">Director</label>
                    <input asp-for="director" class="form-control" />
                    @* Added validation span for Director *@
                    <span asp-validation-for="director" class="text-danger"></span> 
                </div>

                <div class="form-check mb-3">
                    <input asp-for="edited" class="form-check-input" type="checkbox" />
                    <label asp-for="edited" class="form-check-label">Has this been edited?</label> 
                </div>

                <div class="form-group mb-3">
                    <label asp-for="lentto" class="form-label">Lent To</label>
                    <input asp-for="lentto" class="form-control" /> 
                </div>

                <div class="form-group mb-4">
                    <label asp-for="notes" class="form-label">Notes (Max 25 chars)</label>
                    <textarea asp-for="notes" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="notes" class="text-danger"></span> 
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Submit Movie</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}